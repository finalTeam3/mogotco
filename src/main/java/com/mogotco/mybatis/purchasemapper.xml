<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mogotco.mapper.PurchaseMapper">

	<select id="select" parameterType="Integer" resultType="PurchaseDTO">
		SELECT * FROM purchase WHERE purchaseid=#{purchaseid}
	</select>
	<select id="selectAll" resultType="PurchaseDTO">
		SELECT * FROM purchase
	</select>
	<!-- id,pwd를 끄집어낼 때는 get,set으로 입력받고 나오게 될것 -->
	<insert id="insert" parameterType="PurchaseDTO">
		INSERT INTO purchase VALUES (NULL,#{userid},#{purprice},SYSDATE(),#{purpay})
	</insert>
	
	<!-- purchase에는 update, delete는 필요 없을 듯-->
	<update id="update" parameterType="PurchaseDTO">
		UPDATE purchase SET userid=#{userid},purprice=#{purprice},purpay=#{purpay} WHERE purchaseid=#{purchaseid}
	</update>
	<delete id="delete" parameterType="Integer">
		DELETE FROM purchase WHERE purchaseid=#{purchaseid}
	</delete>

</mapper>







